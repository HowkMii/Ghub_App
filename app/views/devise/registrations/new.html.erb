<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left">

    </div>

    <div class="col-lg-6 landing-right text-center d-flex align-items-center ">
      <div>
        <div class="form-login box">
          <h2>Sign up</h2>
          <h5 class="light-color"><strong> Sign up to share your ideas with your friends.</strong> </h5>
          <hr>


          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-group">
              <%= f.text_field :name, autofocus: true, placeholder: "User name", class: "form-control" %>
            </div>
            <div class="form-group">

              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
            </div>

            <div class="form-group">

              <% if @minimum_password_length %>

              <% end %>
              <%= f.password_field :password, autocomplete: "off", placeholder:"Password / 6 characters minimum", class: "form-control" %>
            </div>

            <div class="form-group">

              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password confirmation", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up" , class:"btn btn-success" %>
            </div>
          <% end %>
          <br>
          <p class="light-color"> By clicking “Sign up for GHub”,<br> you agree to our Terms of Service  and Privacy Statement.<br> We’ll occasionally send you account related emails.</p>




        </div>
        <div class="redirect-links box">
          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
